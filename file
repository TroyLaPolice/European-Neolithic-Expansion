		// Split width into 10 equal parts
		partition_widths = map_size_width / num_partitions;
		
		for partition in num_partitions
		{
			
			partition_num_bool = paste("farmers_partition", partition + 1, "_bool", sep = "")
			
			if (partition == 0)
				partition_num_bool = farmers.x <= partition_widths
			else if (partition == 1)
				farmers_partition2_bool = farmers.x <= 2 * partition_widths & farmers.x > partition_widths;
			else
				partition_num_bool = farmers.x <= partition + 2 * partition_widths & farmers.x > partition + 1 * partition_widths
			
		}
		
		
